<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center">Edit <%= album.name %></h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/albums/<%= album._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="album[name]" value="<%= album.name %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="album[image]" value="<%= album.image %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="album[description]" value="<%= album.description %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/albums">Go Back</a>
        </div>
    </div>
</div>

<% include ../partials/footer %>
